<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="game.project.com.gameclouds.MainActivity"
android:background="@drawable/background">


    <ImageView
    android:layout_width="232dp"
    android:layout_height="160dp"
    android:id="@+id/logo_imageview"
    android:background="@drawable/logo"
    android:layout_gravity="top"
    android:layout_marginEnd="100dp"
    android:layout_marginRight="100dp"
    android:layout_marginBottom="340dp" />


    <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/settings_imageview"
    android:layout_alignParentBottom="true"
    android:onClick="Settings"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/settings" />

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/help_imageview"
    android:layout_alignParentBottom="true"
    android:onClick="Help"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="@drawable/help" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_button"
        android:background="@drawable/border_style"
        android:layout_marginTop="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume"
        android:id="@+id/resume_button"
        android:background="@drawable/border_style"
        android:layout_below="@+id/start_button"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/start_button"
        android:layout_alignStart="@+id/start_button"
        android:layout_alignRight="@+id/start_button"
        android:layout_alignEnd="@+id/start_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/quit_button"
        android:background="@drawable/border_style"
        android:layout_below="@+id/resume_button"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/resume_button"
        android:layout_alignStart="@+id/resume_button"
        android:layout_alignRight="@+id/resume_button"
        android:layout_alignEnd="@+id/resume_button" />


</RelativeLayout>

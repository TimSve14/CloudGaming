<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="game.project.com.gameclouds.MainActivity"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_imageview"
        android:background="@drawable/logo"
        android:layout_gravity="top"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="340dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_buttonbutton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_style"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="20dp"
        android:padding="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resume"
        android:id="@+id/resume_button"
        android:background="@drawable/border_style"
        android:layout_below="@+id/start_buttonbutton"
        android:layout_alignLeft="@+id/start_buttonbutton"
        android:layout_alignStart="@+id/start_buttonbutton"
        android:layout_alignRight="@+id/start_buttonbutton"
        android:layout_alignEnd="@+id/start_buttonbutton"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        android:padding="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/quit_button"
        android:layout_below="@+id/resume_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_style"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        android:padding="20dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/settings_imageview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/settings" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/help_imageview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/help" />


</RelativeLayout>